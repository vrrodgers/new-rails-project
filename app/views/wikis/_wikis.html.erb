<div class="container">
    <div class="row">
       
        <div class="col-md-8">
            <h4> My Wikis </h4>
            <% @wikis.each do |wiki| %>
            <div class="media">
                <div class="media-body">
                <h4 class="media-heading">
                    <%= link_to wiki.title, wiki %>
                </h4>
                
                </div>
            </div>
            <% end %>
        </div>
        <div class="col-md-4">
            <%= link_to "New Public Wiki", new_wiki_path, class: 'btn btn-success' %>
        </div>
    </div>
</div>