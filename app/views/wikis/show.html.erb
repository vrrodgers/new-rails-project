<h1>Wikis</h1>
<h1><%= @wiki.title %></h1>
  <small>
    submitted <%= time_ago_in_words(@wiki.created_at) %> ago
  </small>

  <div>
      <%= render partial: 'collaborators/list' %>
    </div>
 <div class="row">
   <div class="col-md-8">
      <p><%= markdown(@wiki.body).html_safe %></p>  
    </div>
    <% if @wiki.private == nil || @wiki.private == false %>
      This is a public wiki.
      <% else %>
        This is a private wiki.
    <% end %>

    
    <div class="col-md-4">

     <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
     <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
     <%= link_to "MY Wikis", mywikis_path(@wiki), class: 'btn btn-success' %>
    </div>
 </div>